---
import Image from 'astro/components/Image.astro'

import PageLayout from '@/layouts/BaseLayout.astro'
import RelatosContent from '@/components/relatos/RelatosContent'
import landing from '@/assets/relatos-background.png'

export const prerender = true

const meta = {
  description: 'Relatos e historias de la Guerra de las Malvinas, contadas por sus protagonistas.',
  title: 'Relatos de malvinas'
}
---

<PageLayout meta={meta}>
  <Image
    src={landing}
    alt='background'
    class='-z-1 absolute left-0 top-0 h-full w-full object-cover'
    loading='eager'
    height={1080}
    width={1920}
  />

  <RelatosContent client:load />
</PageLayout>
