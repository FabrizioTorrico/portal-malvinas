# Firebase Configuration
# Get these values from your Firebase project settings
PUBLIC_FIREBASE_API_KEY=your_api_key_here
PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your_project_id
PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Emulator Configuration (for development)
# Set to 'true' to use Firebase emulators in development
PUBLIC_USE_FIREBASE_EMULATORS=false

# Emulator hosts and ports (optional, defaults shown)
FIREBASE_EMULATOR_FIRESTORE_HOST=localhost
FIREBASE_EMULATOR_FIRESTORE_PORT=8080
FIREBASE_EMULATOR_STORAGE_HOST=localhost
FIREBASE_EMULATOR_STORAGE_PORT=9199
FIREBASE_EMULATOR_AUTH_HOST=localhost
FIREBASE_EMULATOR_AUTH_PORT=9099